@charset "UTF-8";

.empower .header {
  margin-top: 80px;
  padding: 90rpx 0 40rpx 50rpx;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  font-size: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empower .header .login-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  display: block;
}

.empower .content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.empower .content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.empower .bottom {
  width: 683rpx;
  height: 90rpx;
  background-color: #fef2ced2;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-family: SimHei;
  font-weight: 400;
  color: #3e3a39;
  line-height: 90rpx;
  text-align: center;
  margin: 0rpx auto;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.empower button {
  background-color: transparent;
  border-radius: 20rpx;
  padding: 0rpx;
  margin: 0rpx;
  line-height: 1;
  overflow: visible;
  color: #4e6565;
}

.empower button::after {
  /*button的边框样式是通过::after方式实现的*/
  border: none;
}

.empower .button-hover {
  /*点击后样式*/
  color: #000;
}