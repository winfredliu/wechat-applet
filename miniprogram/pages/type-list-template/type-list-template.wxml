<template name="listItem">
	<view class="list" bindtap="nav_to" data-id="{{item.id}}">
		<view class="avator">
			<image src="{{item.avator}}"></image>
		</view>
		<view class="center">
			<text class="name">{{item.name}}</text>
			<text class="price">人均：￥{{item.price}}</text>
			<!-- <image src="{{item.start}}"></image> -->
			<text>{{item.desc}}</text>
		</view>
		<view class="template-right">
			<text>距离：{{item.distance}}</text>
			<view class="zan">
				<image src="{{item.well}}"></image>
				<!-- <text>{{item.number}}</text> -->
			</view>
		</view>
	</view>
</template>