page {
  background: #EDEDED;
}

.swiper-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10rpx;
}

.swiper-list .swiper-item {
  width: 94vw;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx 10rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.swiper-list .swiper-item .swiper-img {
  width: 100%;
  line-height: 0rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.swiper-list .swiper-item .swiper-img image {
  aspect-ratio: 355/150;
  width: 100%;
  height: 100%;
}

.set-body {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
  justify-content: center;
}

.set-body .set-right {
  margin-left: auto;
  margin-right: 34rpx;
  font-size: 26rpx;
  line-height: 1;
  color: #999;
  width: 65%;
  text-align: center;
}

.set-body .set-right .set-right-text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  display: block;
}

.set-bdoy {
  display: flex;
  width: 100%;
}

.set-bdoy .set-item {
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx 0rpx;
  flex: 1 1 50%;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.set-right {
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
}