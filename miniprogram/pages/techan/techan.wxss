@import "../../colorui/animation.wxss";
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
page {
  background: #f7f7f7;
}

.index .tui-header {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx 0 20rpx;
  box-sizing: border-box;
  background: #e41f19;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.index .tui-header .tui-rolling-search {
  width: 100%;
  height: 60rpx;
  border-radius: 35rpx;
  padding: 0 40rpx 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  color: #999;
}

.index .tui-header .tui-rolling-search .tui-swiper {
  font-size: 26rpx;
  height: 60rpx;
  flex: 1;
  padding-left: 12rpx;
}

.index .tui-header .tui-rolling-search .tui-swiper-item {
  display: flex;
  align-items: center;
}

.index .tui-header-banner {
  padding-top: 100rpx;
  padding-bottom: 80rpx;
  box-sizing: border-box;
}

.index .tui-header-banner .tui-banner-bg {
  display: flex;
  height: 225rpx;
  background: #e41f19;
  position: relative;
}

.index .tui-header-banner .tui-banner-box {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  z-index: 99;
  left: 0rpx;
  bottom: -80rpx;
}

.index .tui-header-banner .tui-banner-swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
  transform: translateY(0);
}

.index .tui-header-banner .tui-slide-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.index .tui-header-banner .tui-banner-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  background: none;
  justify-content: space-between;
}

.index .tui-header-banner .tui-banner-swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  overflow: hidden;
}

.index .tui-header-banner .tui-banner-swiper .wx-swiper-dot-active::before {
  background: #fff;
}

.index .tui-header-banner .tui-banner-swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 16rpx;
}

.index .tui-product-category {
  background: #fff;
  padding: 0rpx 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #555;
  margin-bottom: 20rpx;
}

.index .tui-product-category .tui-category-item {
  width: 25%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  padding-top: 30rpx;
}

.index .tui-product-category .tui-category-img {
  height: 90rpx;
  width: 90rpx;
  display: block;
  border-radius: 10rpx;
}

.index .tui-product-category .tui-category-name {
  line-height: 24rpx;
  font-size: 28rpx;
}


.tui-product-box {
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.tui-group-name {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 24rpx 0;
}